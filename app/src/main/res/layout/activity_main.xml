<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B00B0A0A"
    tools:context=".MainActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="16dp"
        app:cardElevation="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:padding="20dp">

            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="serif-monospace"
                android:text="Hello"
                android:textColor="#5689DF"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/chk_in"
                android:layout_marginTop="10dp"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_below="@+id/txt1"
                android:text="Check In Time :"
                android:textColor="#9F000000"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="serif-monospace"/>
            <TextView
                android:id="@+id/checkIn_Tym"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:textColor="#9F000000"
                android:layout_below="@+id/txt1"
                android:layout_toRightOf="@+id/chk_in"
                android:gravity="center"
                android:text="Not yet"
                android:fontFamily="serif-monospace"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/check_out"
                android:layout_marginTop="10dp"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_below="@+id/chk_in"
                android:text="Check Out Time :"
                android:textColor="#9F000000"
                android:gravity="center"
                android:fontFamily="serif-monospace"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/checkOut_Tym"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:textColor="#9F000000"
                android:layout_below="@+id/checkIn_Tym"
                android:layout_toRightOf="@+id/chk_in"
                android:fontFamily="serif-monospace"
                android:gravity="center"
                android:text="Not yet"
                android:textSize="16sp"/>
            <Button
                android:id="@+id/check_in"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/check_out"
                android:text="IN" />

            <Button
                android:id="@+id/Check_Out"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/check_out"
                android:text="Out"
                android:visibility="gone"
           />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>




</RelativeLayout>